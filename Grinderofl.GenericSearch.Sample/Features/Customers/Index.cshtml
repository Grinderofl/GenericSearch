@using Grinderofl.GenericSearch
@using Index = Grinderofl.GenericSearch.Sample.Features.Customers.Index
@model Grinderofl.GenericSearch.Sample.Features.Customers.Index.Model

<div class="row mb-2">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
</div>

<form class="border-top" method="post">
    <h5>Filters</h5>
    <div class="form-row">
        @Html.EditorFor(x => x.FreeText)
        @Html.EditorFor(x => x.CompanyName)
        @Html.EditorFor(x => x.ContactName)
    </div>
    <div class="form-row">
        @Html.EditorFor(x => x.City)
        @Html.EditorFor(x => x.PostalCode)
        @Html.EditorFor(x => x.Country)
    </div>
    <div class="form-row">
        <div class="col-6">
            <div class="form-group">
                <p class="h6 col-12">Order</p>
                <label asp-for="Ordd" class="col-4 col-form-label col-form-label-sm">Direction</label>
                <select asp-for="Ordd" asp-items="@Html.GetEnumSelectList<Direction>()" class="form-control form-control-sm col-8"></select>
                <label asp-for="Ordx" class="col-4 col-form-label col-form-label-sm">Column</label>
                <select asp-for="Ordx" asp-items="@Html.GetPropertiesSelectList<Index.Projection>()" class="col-8 form-control form-control-sm">
                    <option value=""></option>
                </select>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Apply</button>
</form>

<table class="table mt-2">
    <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
                Contact Name
            </th>
            <th>
                Contact Title
            </th>
            <th>
                Address
            </th>
            <th>
                City
            </th>
            <th>
                Region
            </th>
            <th>
                Postal Code
            </th>
            <th>
                Country
            </th>
            <th>
                Phone
            </th>
            <th>
                Fax
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fax)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="Paging" />

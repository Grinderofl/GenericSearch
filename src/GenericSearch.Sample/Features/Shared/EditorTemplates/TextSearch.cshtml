@using GenericSearch.Searches
@model GenericSearch.Searches.TextSearch

<div class="card-body py-2">
    <h6 class="card-subtitle mb-2 text-muted">@Html.GetDisplayNameForModel()</h6>
    <div class="input-group input-group-sm mb-1">
        <select class="form-control" asp-for="Is" asp-items="@Html.GetEnumSelectList<TextSearch.Comparer>()"></select>
    </div>
    <input class="form-control form-control-sm" type="text" asp-for="Term" />
</div>